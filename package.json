{
  "name": "node-crud-restapi",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:prod": "cross-env APP_ENV=production babel src --out-dir dist",
    "build:dev": "cross-env APP_ENV=development babel src --out-dir dist",
    "start": "node dist/index.js",
    "dev": "cross-env APP_ENV=development nodemon --exec npm run restart",
    "restart": "rimraf dist && npm run build:dev && npm start",
    "test": "cross-env APP_ENV=testing jest --forceExit --detectOpenHandles --silent",
    "test:watch": "cross-env APP_ENV=testing jest --watch --forceExit --detectOpenHandles --silent"
  },
  "author": "Muhammad Hasham Khalid",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/preset-env": "^7.15.4",
    "@faker-js/faker": "^7.6.0",
    "babel-core": "^6.26.3",
    "cross-env": "^7.0.3",
    "jest": "^29.0.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.0"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist/"
    ],
    "restoreMocks": true
  }
}
